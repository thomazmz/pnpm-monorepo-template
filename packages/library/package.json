{
  "name": "@monorepo/library",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist/lib.js",
  "types": "dist/lib.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/lib.js",
      "require": "./dist/lib.js"
    },
    "./utilities": {
      "types": "./dist/utilities/index.d.ts",
      "import": "./dist/utilities/index.js",
      "require": "./dist/utilities/index.js"
    }
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.js",
    "format": "eslint . --ext .ts,.js --fix",
    "check": "tsc --noEmit",
    "test": "jest --config ./jest.json",
    "build": "rimraf dist && tsc -p ./build.json"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "jest": "^30.0.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
