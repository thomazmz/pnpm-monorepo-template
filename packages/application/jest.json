{
  "moduleFileExtensions": [ "ts", "js" ],
  "maxWorkers": 1,
  "rootDir": "./src",
  "testMatch": ["**/*.test.ts"],
  "testEnvironment": "node",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "./tsconfig.json"
    }
  },
  "coverageReporters": ["text", "lcov"],
  "coverageDirectory": "<rootDir>/../coverage",
  "moduleNameMapper": {
    "^@monorepo/application/services$": "<rootDir>/services/index.ts",
    "^@monorepo/application/controllers$": "<rootDir>/controllers/index.ts"
  },
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/index.ts"
  ]
}
