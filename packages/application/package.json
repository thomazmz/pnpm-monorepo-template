{
  "name": "@monorepo/application",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "exports": {
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js",
      "require": "./dist/services/index.js"
    },
    "./controllers": {
      "types": "./dist/controllers/index.d.ts",
      "import": "./dist/controllers/index.js",
      "require": "./dist/controllers/index.js"
    }
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.js",
    "format": "eslint . --ext .ts,.js --fix",
    "check": "tsc --noEmit",
    "test": "jest --config ./jest.json",
    "build": "rimraf dist && tsc -p ./build.json",
    "start": "node dist/app.js",
    "dev": "nodemon"
  },
  "dependencies": {
    "@monorepo/library": "workspace:^"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
